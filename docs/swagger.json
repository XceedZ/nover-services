{
    "swagger": "2.0",
    "info": {
        "description": "Ini adalah dokumentasi API untuk Nover System.",
        "title": "Nover System API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "support@noversystem.dev"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/auth/login": {
            "post": {
                "description": "Mengotentikasi pengguna dengan username dan password, lalu memberikan JWT.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Login pengguna",
                "parameters": [
                    {
                        "description": "Kredensial Login dengan Username",
                        "name": "login",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.LoginSuccessResponse"
                        }
                    },
                    "400": {
                        "description": "Input tidak valid",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Kredensial tidak valid",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Error internal server",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Membuat akun pengguna baru dengan email, username, dan password.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Registrasi pengguna baru",
                "parameters": [
                    {
                        "description": "Informasi Registrasi Pengguna",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/tables.User"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/tables.User"
                        }
                    },
                    "400": {
                        "description": "Input tidak valid",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Email atau Username sudah terdaftar",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Error internal server",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/bank/get": {
            "get": {
                "description": "Mengambil daftar semua bank yang aktif, diurutkan berdasarkan nama.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Bank"
                ],
                "summary": "Daftar Bank",
                "responses": {
                    "200": {
                        "description": "Daftar bank yang berhasil diambil",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/controllers.BankResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Terjadi kesalahan internal pada server",
                        "schema": {
                            "$ref": "#/definitions/fiber.Map"
                        }
                    }
                }
            }
        },
        "/v1/user/author-status": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Memvalidasi token, memeriksa apakah pengguna adalah penulis, dan mengembalikan data profil lengkap pengguna.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Cek Status Penulis \u0026 Profil",
                "responses": {
                    "200": {
                        "description": "Status penulis dan data profil lengkap",
                        "schema": {
                            "$ref": "#/definitions/controllers.AuthorStatusResponse"
                        }
                    },
                    "401": {
                        "description": "Tidak terotentikasi",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Pengguna tidak ditemukan",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Error internal server",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/user/request-author": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Memperbarui profil pengguna untuk menjadi penulis dengan melengkapi data yang diperlukan. Endpoint ini memerlukan otentikasi.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Permintaan menjadi Penulis",
                "parameters": [
                    {
                        "description": "Data untuk menjadi penulis",
                        "name": "author_request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.AuthorRequestPayload"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pesan sukses",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "string"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Input tidak valid",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Tidak terotentikasi",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Nama pena sudah digunakan",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Error internal server",
                        "schema": {
                            "$ref": "#/definitions/controllers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.AuthorRequestPayload": {
            "type": "object",
            "properties": {
                "accountNumber": {
                    "type": "string"
                },
                "bankId": {
                    "type": "integer"
                },
                "instagram": {
                    "type": "string"
                },
                "penName": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "controllers.AuthorStatusResponse": {
            "type": "object",
            "properties": {
                "isAuthor": {
                    "type": "boolean"
                },
                "user": {
                    "$ref": "#/definitions/tables.User"
                }
            }
        },
        "controllers.BankResponse": {
            "type": "object",
            "properties": {
                "bankCode": {
                    "type": "string"
                },
                "bankId": {
                    "type": "integer"
                },
                "bankName": {
                    "type": "string"
                }
            }
        },
        "controllers.ErrorResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "controllers.LoginRequest": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string",
                    "example": "password123"
                },
                "username": {
                    "type": "string",
                    "example": "testuser"
                }
            }
        },
        "controllers.LoginSuccessResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/tables.User"
                }
            }
        },
        "fiber.Map": {
            "type": "object",
            "additionalProperties": true
        },
        "tables.User": {
            "type": "object",
            "properties": {
                "accountNumber": {
                    "type": "string"
                },
                "avatarUrl": {
                    "type": "string"
                },
                "bankId": {
                    "type": "integer"
                },
                "createDatetime": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "flgAuthor": {
                    "type": "string"
                },
                "fullName": {
                    "type": "string"
                },
                "instagram": {
                    "type": "string"
                },
                "isEmailVerified": {
                    "type": "boolean"
                },
                "loginWith": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "penName": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "updateDatetime": {
                    "type": "string"
                },
                "userCode": {
                    "type": "string"
                },
                "userId": {
                    "type": "integer"
                },
                "username": {
                    "type": "string"
                }
            }
        }
    }
}